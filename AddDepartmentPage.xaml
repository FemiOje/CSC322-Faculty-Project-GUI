<Page x:Class="FacultyApp.AddDepartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddDepartmentPage">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Add Department" FontSize="20" Margin="10"/>
        <TextBox Name="DepartmentNameTextBox" Width="200" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add" Click="Add_Click" Width="75" Margin="5"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="75" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Page>
